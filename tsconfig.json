{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018",
      "ES2017",
      "ES2015",
      "ES6",
      "DOM"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-native",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitHelpers": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
} 